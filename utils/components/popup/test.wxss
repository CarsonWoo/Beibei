/* 以下为完善资料弹窗 wxss类 */
.pop-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 10;
  background: rgba(0, 0, 0, 0.4);
  display: none;
}

.pop-show .pop-container {
  transform: translateY(0);
}

.pop-show .pop-mask {
  display: block;
}
.pop-container{
  position: fixed;
  transform: translateY(300%);
  transition: all 0.4s ease;
  z-index: 12;
  top:112rpx;
  left: 63rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

