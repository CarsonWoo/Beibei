/*自定义的dots样式*/
.dots{
  position: absolute;
  left: 0;
  right: 0;
  bottom: 17rpx;
  display: flex;
  justify-content: center;
}

.dot{
  margin: 0 8rpx;
  width: 13rpx;
	height: 13rpx;
  border-radius: 50%;
	background-color: #ffffff;
	border: solid 1rpx #dcdcdc;
  transition: all .6s;
}
.dot.active{
  width: 13rpx;
	height: 13rpx;
  border-radius: 50%;
	background-color: #ababab;
}

