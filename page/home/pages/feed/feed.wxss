page {
  height: 100%;
  width: 100%;
  background-color: white;
}

button {
  background-color: #fff;
  border-radius: 0rpx;
  padding: 0rpx;
  margin: 0rpx;
  display: inline-block;
  line-height: 1;
  position: none;
}

button::after {
  border: none;
}

.container {
  display: block;
  padding-bottom: 120rpx;
}

.empty-content {
  width: 100%;
  height: 158rpx;
  background-color: #fff;
}

.header-image {
  width: 100%;
  /* height: 500rpx; */
}

.title {
  /* width: 508rpx; *//* margin-left: 24rpx; */
  font-size: 45rpx;
  /* font-weight: bold; */
}

.author-container {
  margin-left: 26rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.author-container image {
  width: 41px;
  height: 41px;
  border-radius: 25px;
}

.author-container text {
  font-size: 26rpx;
  color: #999d9e;
  margin-left: 10rpx;
}

.content-container {
  display: flex;
  flex-direction: column;
  /* text-align: center; */
  margin-left: 24rpx;
  margin-right: 24rpx;
  margin-top: 30rpx;
}

.content-container image {
  width: 100%;
}

.content-container rich-text {
  margin-left: 20rpx;
  margin-right: 20rpx;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.bottom-container {
  width: 750rpx;
  height: 96rpx;
  background-color: #fff;
  border-top-style: solid;
  border-top-width: 1rpx;
  border-top-color: #eee;
  position: fixed;
  bottom: 0rpx;
  /* display:flex;
  flex-direction: row;
  align-items: center; */
}

.toast999-container {
  position:fixed;
  left: 24rpx;
  bottom: 30rpx;
}

.toast999-container text {
  font-family: PingFang-SC-Medium;
  font-size: 32rpx;
  font-weight: normal;
  font-stretch: normal;
  line-height: 48rpx;
  letter-spacing: 0rpx;
  color: #2a353a;
}

.toast-999 {
  width: 90rpx;
  height: 41rpx;
  background-color: #ff3f44;
  border-radius: 21rpx;
  position: absolute;
  left: 81rpx;
  bottom: 16rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.toast-999 text {
  font-family: PingFang-SC-Medium;
  font-size: 28rpx;
  font-weight: normal;
  font-stretch: normal;
  letter-spacing: 0rpx;
  color: #fff;
  position: absolute;
  bottom: -4rpx;
}

.btn-share {
  height: 96rpx;
  width: 252rpx;
  position: fixed;
  bottom: 0rpx;
  right: 0rpx;
}

.like-container {
  position: fixed;
  bottom: 31rpx;
  right: 270rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.like-container image {
  width: 41rpx;
  height: 41rpx;
}

.like-container text {
  margin-left: 16rpx;
  font-family: PingFang-SC-Medium;
  font-size: 30rpx;
  font-weight: normal;
  font-stretch: normal;
  letter-spacing: 0rpx;
  color: #999d9e;
}

.top-container {
  position: fixed;
  top: 0rpx;
  left: 0rpx;
  width: 750rpx;
  height: 158rpx;
  border-radius: 14rpx;
  background-color: #fff;
  z-index: 9999;
}

.top-banner {
  width: 100%;
  height: 100%;
}

.close-container {
  display: inline-block;
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  right: 0rpx;
}

.top-banner-close {
  margin-right: 12rpx;
  width: 26rpx;
  height: 26rpx;
  border-radius: 13rpx;
  background-color: #000;
  opacity: 0.4;
}

.label-text {
  font-family: PingFang-SC-Bold;
  font-size: 30rpx;
  font-weight: normal;
  font-stretch: normal;
  line-height: 15rpx;
  letter-spacing: 0rpx;
  color: #6b7176;
  margin-top: 72rpx;
  margin-left: 25rpx;
}

.feed-item-container {
  display: flex;
  flex-direction: column;
  width: 460rpx;
  height: 458rpx;
  background-color: #fff;
  box-shadow: 0rpx 10rpx 12rpx 0rpx #f2f2f2;
  border-radius: 10rpx;
  border: solid 1rpx #eee;
}

.feed-item-pic {
  width: 100%;
  height: 251rpx;
  background-color: #e5e5e5;
}

.feed-item-footer {
  width: 100%;
  height: 207rpx;
  display: flex;
  flex-direction: column;
  padding-left: 36rpx;
  padding-top: 32rpx;
  position: relative;
}

.item-label {
  font-family: PingFang-SC-Bold;
  font-size: 30rpx;
  font-weight: normal;
  font-stretch: normal;
  letter-spacing: 0rpx;
  color: #5ee1c9;
  text-align: left;
}

.item-desc {
  width: 388rpx;
  font-family: PingFang-SC-Bold;
  font-size: 30rpx;
  font-weight: normal;
  letter-spacing: 0rpx;
  color: #2a353a;
  margin-top: 15rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  text-align: left;
}

.item-author-container {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 39rpx;
  height: 34rpx;
  position: absolute;
  left: 37rpx;
  bottom: 29rpx;
}

.item-author-container image {
  width: 34rpx;
  height: 34rpx;
  border-radius: 17rpx;
}

.item-author-container text {
  margin-left: 7rpx;
  font-family: PingFang-SC-Medium;
  font-size: 26rpx;
  font-weight: normal;
  font-stretch: normal;
  letter-spacing: 0rpx;
  color: #6b7176;
}
