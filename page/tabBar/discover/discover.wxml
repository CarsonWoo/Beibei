          <text style='margin-left:40rpx;margin-right:40rpx;line-height:34rpx;'>{{book_info_introduction}}</text>
        </view>

      </view>
      <image class='close-img' src='/images/ic_close.png' catchtap='onCloseDialog'></image>
    </block>
