page {
  background-color: #f8f8f8;
}

.container {
  display: flex;
  flex-direction: column;
}

.play-container {
  display: flex;
  flex-direction: column;
  position: fixed;
  top: 0;
  width: 100%;
  /* background-color: white; *//* box-shadow: ; */
  border-radius: 10rpx;
  padding-bottom: 20rpx;
}

.progress-container {
  position: relative;
  /* display: flex; */
  margin-top: 23rpx;
}

.progress {
  display: flex;
  flex-direction: row;
  /* align-items: center; */
  position: relative;
  justify-content: center;
  /* margin-left: 45rpx; *//* background-color: #eeeeee; */
}

.progress slider {
  width: 640rpx;
  margin: 0;
}

.control-container {
  display: flex;
  flex-direction: row;
  margin-left: 45rpx;
  margin-top: 16rpx;
  align-items: center;
}

.control {
  font-size: 26rpx;
  text-align: center;
  height: 42rpx;
  /* background-color: #ffffff; */
  border-radius: 22rpx;
  border: solid 1px #c6cbcb;
  padding-left: 15rpx;
  padding-right: 15rpx;
  line-height: 42rpx;
  color: #999d9e;
  margin-left: 15rpx;
  margin-right: 15rpx;
}

.play-button {
  width: 42rpx;
  height: 44rpx;
  margin-right: 15rpx;
}

.night-button {
  width: 60rpx;
  height: 44rpx;
  margin-left: 15rpx;
}

.time-container {
  font-size: 26rpx;
  position: absolute;
  right: 60rpx;
  top: 28rpx;
  color: #c5caca;
}

.content-container {
  display: flex;
  flex-direction: column;
  padding-top: 150rpx;
  width: 100%;
  padding-bottom: 50rpx;
  
  /* font-size: 28rpx;
  color: #6b7176; */
}

.content-container rich-text {
  width: 95%;
  margin-top: 10rpx;
  margin-bottom: 8rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  overflow-wrap:break-word;
}

.big-size {
  font-size: 36rpx;
}

.normal-size {
  font-size: 28rpx;
}

.night-mode {
  color: #9fa4b0;
}

.day-mode {
  color: #6b7176;
}

.light-text {
  color: #00b393;
}

.translation-button {
  font-size: 28rpx;
  /* color: #999d9e; */
  box-shadow: 0px 2rpx 13rpx 0px #e0e0e0;
  border-radius: 50%;
  position: fixed;
  right: 25rpx;
  bottom: 250rpx;
  width: 72rpx;
  height: 72rpx;
  line-height: 72rpx;
  text-align: center;
}

.button-container {
  display: flex;
  flex-direction: row;
  width: 100%;
  padding-top: 70rpx;
  padding-bottom: 70rpx;
  justify-content: center;
}

.sign-button {
  width: 442rpx;
  height: 87rpx;
  font-size: 40rpx;
  color: white;
  position: relative;
  display: flex;
  /* justify-content: center; */
  /* align-items: center; */
}

.sign-button image {
  width: 145rpx;
  height: 100rpx;
  position: absolute;
  top: -30rpx;
  left: 25rpx;
  z-index: 100;
}

.sign-button button {
  width: 442rpx;
  height: 100%;
  background-color: #5ee1c9;
  color: white;
  z-index: 99;
  border-radius: 44rpx;
  text-align: end;
  padding-right: 80rpx;
}

.share-button {
  width: 250rpx;
  background-color: transparent;
  border-radius: 44rpx;
  border: solid 1rpx #5ee1c9;
  height: 87rpx;
  font-size: 40rpx;
  color: #5ee1c9;
  line-height: 87rpx;
  text-align: center;
  padding-left: 50rpx;
}

.share-button image {
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  left: 40rpx;
  top: 18rpx;
}

.next-button {
  width: 277rpx;
  height: 67rpx;
  border-radius: 34rpx;
  border: solid 1rpx #45e9c8;
  text-align: center;
  line-height: 67rpx;
  color: #5ee1c9;
  font-size: 26rpx;
}

.double-button-container {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.next-solid-button {
  text-align: center;
  background-color: #5ee1c9;
  color: white;
  width: 394rpx;
  height: 87rpx;
  line-height: 87rpx;
  border-radius: 44rpx;
  /* margin-left: 20rpx; */
  margin-right: 40rpx;
  font-size: 40rpx;
}

.mask {
  background: rgba(0, 0, 0, 0.6);
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.money-dialog-container {
  display: flex;
  position: fixed;
  width: 500rpx;
  height: 380rpx;
  left: 50%;
  margin-left: -250rpx;
  flex-direction: column;
  background-color: white;
  justify-content: center;
  text-align: center;
  padding-bottom: 20rpx;
  top: 50%;
  margin-top: -250rpx;
  border-radius: 20px;
}

.money-dialog-text {
  font-size: 28rpx;
  text-align: center;
}

.money-dialog-container cover-image {
  width: 347rpx;
  height: 234rpx;
  margin-top: 20rpx;
  margin-bottom: 35rpx;
  margin-left: 95rpx;
}

.download-img-container {
  display: flex;
  flex-direction: column;
  border-radius: 20rpx;
  position: relative;
  width: 460rpx;
}

.sign-image {
  width: 100%;
  border-radius: 20rpx;
}

.download-text {
  color: white;
  font-size: 26rpx;
  font-family: PingFang-SC-Regular;
  margin-top: 20rpx;
}