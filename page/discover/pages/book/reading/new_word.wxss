page {
  background-color: white;
}

.container {
  display: flex;
  flex-direction: column;
  width: 100%;
  padding-bottom: 40rpx;
}

.empty-image {
  width: 308rpx;
  height: 220rpx;
  margin-top: 200rpx;
}

.empty-text {
  margin-top: 20rpx;
  font-size: 22rpx;
  color: #2a353a;
  text-align: center;
  width: 100%;
}

.chapter-word-container {
  width: 100%;
  display: flex;
  flex-direction: column;
  margin-top: 40rpx;
  margin-bottom: 40rpx;
}

.chapter-title {
  font-size: 40rpx;
  color: #5ee1c9;
  text-shadow: 1rpx 0 1px #5ee1c9;
  padding-left: 26rpx;
}

.word-container {
  margin-top: 50rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  /* align-items: center; */
}

.sequence {
  font-size: 30rpx;
  color: #5ee1c9;
}

.new-word {
  font-size: 30rpx;
  color: #2a353a;
  margin-left: 30rpx;
}

.new-word-symbol {
  font-size: 22rpx;
  color: #999d9e;
  margin-left: 10rpx;
}

.meaning {
  font-size: 26rpx;
  color: #999d9e;
  flex-wrap: wrap;
  word-break: break-all;
  width: 520rpx;
}

.bottom-button {
  position: fixed;
  text-align: center;
  font-size: 39rpx;
  color: white;
  line-height: 94rpx;
  height: 94rpx;
  bottom: 0;
  width: 100%;
  background-color: #5ee1c9;
}