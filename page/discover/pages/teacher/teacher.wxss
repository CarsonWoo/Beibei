page {
  background-color: #f8f8f8;
}

.container {
  display: flex;
  flex-direction: column;
  /* justify-content: center; */
  align-items: center;
}

.course-container {
  width: 671rpx;
  /* height: 729rpx; */
  background-color: #fff;
  box-shadow: 0px 2rpx 60rpx 0px #e0e0e0;
  border-radius: 10rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-bottom: 40rpx;
  margin-top: 45rpx;
}

.course-name {
  width: 100%;
  font-size: 50rpx;
  color: #2a353a;
  margin-top: 50rpx;
  display: flex;
  flex-direction: row;
  /* align-items: center; */
  justify-content: center;
  text-shadow: 1rpx 0px 0px rgb(91, 105, 110);
}

.square {
  background-color: #5ee1c9;
}

.normal {
  width: 18rpx;
  height: 18rpx;
  margin-top: 15rpx;
}

.mini {
  width: 12rpx;
  height: 12rpx;
  margin-top: 30rpx;
}

.course-info-container {
  margin-top: 15rpx;
  display: flex;
  flex-direction: column;
  font-size: 30rpx;
  color: #b0b0b0;
  text-align: center;
}

.course-info-container text {
  margin-top: 4rpx;
  margin-bottom: 4rpx;
}

.teacher-info-container {
  color: #2a353a;
  text-align: center;
  display: flex;
  flex-direction: column;
  margin-top: 25rpx;
  align-items: center;
}

.teacher-info-container text {
  margin-top: 5rpx;
}

.QR-code {
  width: 236rpx;
  height: 236rpx;
  background-color: black;
  margin-top: 20rpx;
}

.save-container {
  display: flex;
  flex-direction: row;
  font-size: 24rpx;
  color: #b0b0b0;
  align-items: center;
  margin-top: 10rpx;
}

.save-container canvas {
  width: 32rpx;
  height: 32rpx;
  margin-right: 5rpx;
}

.rule-container {
  width: 100%;
  background-color: white;
  display: flex;
  flex-direction: column;
  position: relative;
  margin-top: 50rpx;
  padding-top: 50rpx;
  padding-bottom: 20rpx;
}

.rule-label {
  width: 170rpx;
  height: 50rpx;
  line-height: 50rpx;
  background-color: #5ee1c9;
  color: white;
  text-shadow: 1rpx 0px 0px white;
  position: absolute;
  top: 0rpx;
  left: -20rpx;
  text-align: end;
  border-radius: 30rpx;
  font-size: 28rpx;
  padding-right: 30rpx;
}

.rule {
  display: flex;
  flex-direction: column;
  margin-top: 30rpx;
  margin-bottom: 30rpx;
  margin-left: 60rpx;
}

.rule-title {
  font-size: 26rpx;
  color: #2a353a;
  text-shadow: 1rpx 0px 0px #6b7176;
}

.rule-content {
  font-size: 24rpx;
  color: #6b7176;
  margin-top: 5rpx;
  padding-left: 15rpx;
}

.rule-base {
  color: #7a7d80;
  font-size: 22rpx;
  text-align: center;
  margin-top: 100rpx;
}
