page {
  background-color: #f8f8f8;
}

text {
  font-family: fantasy;
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  height: 100%;
}

.content-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: white;
  border-radius: 20rpx;
  box-shadow: 0 9px 29px 0 rgba(216, 216, 216, 0.28);
  width: 85%;
  padding-top: 70rpx;
  margin-top: 80rpx;
  padding-bottom: 60rpx;
}

.huge-text {
  font-size: 40rpx;
}

.portrait {
  width: 90rpx;
  height: 90rpx;
  margin-top: 40rpx;
  margin-bottom: 20rpx;
  border-radius: 50%;
}

.bold {
  font-weight: bold;
}

.black {
  color: #262626;
}

.qr-code {
  width: 352rpx;
  height: 352rpx;
  border-radius: 10rpx;
  margin-top: 40rpx;
}

.download-container {
  margin-top: 40rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.download-container canvas {
  width: 32rpx;
  height: 32rpx;
  margin-right: 5rpx;
}

.normal-text {
  font-size: 30rpx;
}

.min-text {
  font-size: 26rpx;
}

.sub-huge-text {
  font-size: 32rpx;
}

.gray {
  color: #b0b0b0;
}

.tips-text-container {
  margin-top: 40rpx;
  display: flex;
  flex-direction: row;
  /* width: 100%; */
  position: relative;
  margin-bottom: 8rpx;
}

.tips-text-container text {
  z-index: 9999;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
}

.bg-yellow {
  background-color: #ffe670;
  height: 13rpx;
  width: 153rpx;
  position: absolute;
  right: 0;
  bottom: 0;
}

.letter-spacing {
  letter-spacing: 6rpx;
}