page {
  height: 100%;
  background-color: #f9f9f9;
}

.bg-image {
  height: 600rpx;
  position: absolute;
  /* float: left; */
  width: 100%;
  background-repeat: no-repeat;
  background-size: 100% 100%;
  -moz-background-size: 100% 100%;
}

.container {
  /* display: flex;
  flex-direction: column; */
  position: relative;
}

.main-container {
  display: flex;
  width: 700rpx;
  flex-direction: column;
  border-radius: 8px;
  box-shadow: 0 4px 3px #e8e8e8;
  background-color: white;
  padding-bottom: 45rpx;
}

.prize-info-container {
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 20rpx;
  margin-left: 30rpx;
}

.prize-info-text {
  display: flex;
  flex-direction: column;
  width: 450rpx;
}

.prize-title {
  font-size: 26rpx;
  color: #6f7475;
}

.prize-name {
  font-size: 42rpx;
  color: #2f2f2f;
  margin-top: 10rpx;
  font-weight: bold;
  /* text-decoration: underline;
  text-decoration-color: #5ee1c9;
  text-decoration-line:  line-through;
  text-decoration-style: 10px solid; */
}

.prize-info-container image {
  width: 168rpx;
  height: 168rpx;
  margin-left: 20rpx;
  border-radius:8px;
}

.countdown-container {
  display: flex;
  flex-direction: row;
  font-size: 30rpx;
  justify-content: center;
  margin-top: 60rpx;
}

.join-button-container {
  background-color: #5ee1c9;
  box-shadow: 0 3px 2px #a4ddd3;
  align-items: center;
  margin: 70rpx 30rpx 0 30rpx;
  border-radius: 25px;
  text-align: center;
  height: 85rpx;
}

.join-button-container text {
  font-size: 40rpx;
  line-height: 85rpx;
  color: white;
}

.content-container {
  position: fixed;
  top: 360rpx;
  margin-left: 25rpx;
  margin-right: 25rpx;
  display: block;
}

.line {
  height: 0.5px;
  background-color: #e0e0e0;
  width: 200rpx;
  margin-top: 23rpx;
}

.result-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%
}

.result-header {
  display: flex;
  flex-direction: row;
  width: 100%;
  font-size: 28rpx;
  justify-content: center;
  align-items: center;
}

.result-header text {
  margin-left: 15rpx;
  margin-right: 15rpx;
  margin-top: 30rpx;
}

.result {
  width: 75%;
  display: flex;
  flex-direction: row;
  margin-top: 30rpx;
  padding-bottom: 60rpx;
}

.userinfo {
  width: 33%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center;
}

.userinfo image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}

.userinfo text {
  font-size: 26rpx;
}

.tips {
  font-size: 25rpx;
  margin-top: 20rpx;
  color: #a8a8a8;
}

