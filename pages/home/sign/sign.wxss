page {
  width: 100%;
  height: 100%;
  background-color: #d8faf4;
}

.container {
  display: block;
  height: 100%;
  width: 100%;
}

.container image {
  width: 100%;
  height: 100%;
}

.button-container {
  position: fixed;
  bottom: 60rpx;
  margin-left: 55rpx;
  margin-right: 55rpx;
  width: 640rpx;
}

.button {
  width: 100%;
  height: 90rpx;
  border-radius: 25px;
  background: linear-gradient(to right, #829df7, #73bae3, #65d5d2);
  font-size: 36rpx;
  text-shadow: 0.5px 0.5px 0.1px whitesmoke;
  line-height: 90rpx;
  color: white;
  letter-spacing: 1px;
}

.button-container cover-image {
  width: 140rpx;
  height: 120rpx;
  position: fixed;
  margin-left: 30rpx;
  bottom: 70rpx;
}

.title {
  position: fixed;
  font-size: 50rpx;
  text-align: cetner;
  top: 180rpx;
  left: 50%;
  margin-left: -200rpx;
  color: #2a353a;
}
