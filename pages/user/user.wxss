/* pages/user/user.wxss */

page {
  height: 100%;
  /* display: flex;
  flex-direction: column;
  overflow: hidden; */
}

.user_background {
  width: 100%;
  height: 619rpx;
  box-sizing: border-box;
  background-repeat: no-repeat;
  background-size: 100% 100%;
  -moz-background-size: 100% 100%;
  z-index: 1000;
  background-image: url('http://47.107.62.22/l_e/user/background.jpg');
  /* background: linear-gradient(to right, #60bfa7, #5ee1c9, #60bfa7); */
  /* position: relative;*/
}

.background_tmp {
  width: 100%;
  height: 1800rpx;
}

.user_background image {
  display: block;
  width: 100%;
  height: 100%;
  position: absolute;
}

.cover-image {
  /* align-items: center;
  align-content: center;
  align-self: center; */
  width: 168rpx;
  height: 168rpx;
  border-color: #5ee1c9;
  background-color: rgba(245, 245, 245, 0.438);
  border-radius: 50%;
  justify-content: center;
  margin-top: 98rpx;
}

.portrait_container {
  position: relative;
  align-items: center;
  align-content: center;
  align-self: center;
  width: 100%;
  height: 100%;
  /* top: 98rpx; */
  left: auto;
  right: auto;
  /* justify-content: center; */
  display: flex;
  flex-direction: column;
}

.user {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.user-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
  border-width: 1rpx;
  border-color: white;
}

.user-nickname {
  color: white;
  font-size: 33rpx;
  margin-top: 40rpx;
}

.user-bind {
  color: white;
  font-size: 25rpx;
  margin-top: 20rpx;
}

.user-info {
  width: 100%;
  height: 126rpx;
  align-items: bottom;
  position: absolute;
  bottom: 20rpx;
  /* align-content: center;
  align-items: center; */
  justify-content: center;
  display: flex;
  flex-direction: row;
}

.divider {
  background-color: white;
  height: auto;
  width: 3rpx;
  margin-top: 25rpx;
  margin-bottom: 25rpx;
  justify-content: center;
  /* align-content: center; */
  line-height: 126rpx;
  /* align-items: center; */
  margin-left: 75rpx;
  margin-right: 75rpx;
  display: flex;
  flex-direction: column;
}

.user-info-item {
  width: auto;
  height: auto;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: white;
  font-size: 33rpx;
}

.plan_container {
  width: 100%;
  z-index: 1000;
}

.plan-scroll-container {
  display: flex;
  flex-direction: row;
  overflow: scroll;
  width: 100%;
  /* flex: none; */
  margin-top: 30rpx;
  padding-bottom: 30rpx;
}

.plan-item {
  width: 300rpx;
  height: 390rpx;
  margin: 0 20rpx 0 20rpx;
  align-items: center;
  box-shadow: 1.5px 2px 1px #ececec;
  border-radius: 10rpx;
  /* display: inline-block; */
  background-color: white;
}

.right-corner-image {
  float: right;
  right: -10rpx;
  top: -10rpx;
}

.right-corner-image image {
  width: 48rpx;
  height: 48rpx;
}

.plan-name {
  /* width: 195rpx; *//* padding-left: 30rpx;
  padding-right: 30rpx; */
  max-height: 92rpx;
  font-size: 32rpx;
  text-align: center;
  align-items: center;
  /* white-space: pre-line; */
  margin-top: 90rpx;
  /* line-height: 2rpx; */
  display: block;
  font-weight: bold;
}

.plan-word-count {
  font-size: 24rpx;
  text-align: center;
  display: block;
  margin-top: 60rpx;
  color: #c0c0c0;
}

.plan-progress {
  width: 250rpx;
  height: 12rpx;
  background-color: #e2e2e2;
  border-radius: 10px;
  margin-left: 25rpx;
  margin-right: 25rpx;
  margin-top: 60rpx;
}

.setting-image {
  /* margin-right: 25rpx; *//* margin-top: 25rpx; */
  position: absolute;
  right: 0rpx;
  top: 15rpx;
  padding: 15rpx;
  width: 55rpx;
  height: 55rpx;
}

.setting-image image {
  width: 45rpx;
  height: 45rpx;
}

/* .page {
  overflow: hidden;
  white-space: nowrap;
} */

.bg-image {
  position: absolute;
  width: 100%;
  height: 619rpx;
}

page {
  background-color: #f8f8f8;
}

.dialog-container {
  position: fixed;
  width: 540rpx;
  left: 50%;
  margin-left: -270rpx;
  top: 50%;
  /* text-align: center; */
  margin-top: -250rpx;
  background-color: white;
  border-radius: 12px;
  display: flex;
  overflow-wrap: break-word;
  flex-direction: column;
  z-index: 2000;
}

.dialog-container text {
  margin-top: 25rpx;
  margin-bottom: 25rpx;
  text-align: center;
  margin-left: 80rpx;
  margin-right: 80rpx;
  font-size: 28rpx;
  padding-top: 40rpx;
  padding-bottom: 40rpx;
}

.button-container {
  border-bottom-left-radius: 12px;
  border-bottom-right-radius: 12px;
  background-color: #f0f0f0;
  display: flex;
  flex-direction: row;
  text-align: center;
  font-size: 30rpx;
}

.confirm {
  border-bottom-right-radius: 12px;
  background-color: white;
  padding-top: 18rpx;
  padding-bottom: 18rpx;
  margin-left: 0.5px;
  margin-top: 1px;
  color: #f75458;
  width: 50%;
}

.cancel {
  border-bottom-left-radius: 12px;
  background-color: white;
  padding-top: 18rpx;
  padding-bottom: 18rpx;
  margin-right: 0.5px;
  margin-top: 1px;
  color: #d3d3d3;
  width: 50%;
}

::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

.dialog {
  width: 100%;
  height: 100%;
  position: fixed;
  background-color: #0e0e0e66;
  left: 0;
  top: 0;
}

.get-user-info-dialog {
  width: 100%;
  height: 100%;
  position: fixed;
  background-color: #0e0e0e66;
  left: 0;
  top: 0;
}

.auth-portrait {
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
  background-color: white;
  position: fixed;
  left: 50%;
  margin-left: -90rpx;
  top: 30%;
}

.get-user-info-dialog button {
  width: 340rpx;
  height: 75rpx;
  line-height: 75rpx;
  background-color: #5ee1c9;
  color: white;
  font-size: 34rpx;
  position: fixed;
  left: 50%;
  margin-left: -170rpx;
  border-radius: 20px;
  top: 40%;
  margin-top: 150rpx;
}
